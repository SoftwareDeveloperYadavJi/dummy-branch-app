# Staging Environment Configuration
# Copy this file to .env.staging and update with secure values

# PostgreSQL Configuration
POSTGRES_VERSION=16
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password_change_me
POSTGRES_DB=microloans
DB_PORT=5433
DB_VOLUME_NAME=dummy-branch-app_db_data_staging

# Database Healthcheck Settings (stricter for staging)
DB_HEALTHCHECK_INTERVAL=5s
DB_HEALTHCHECK_TIMEOUT=5s
DB_HEALTHCHECK_RETRIES=10

# API Configuration
FLASK_ENV=staging
API_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=text

# Gunicorn Configuration (staging - 2 workers)
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=30
GUNICORN_ACCESS_LOG=True

# Nginx Configuration
NGINX_VERSION=alpine
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# Container Restart Policy
RESTART_POLICY=unless-stopped
